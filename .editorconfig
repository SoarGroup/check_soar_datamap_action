[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

# VisualSoar uses three spaces
[*.soar]
indent_size = 3

[*.yml]
indent_size = 2

# trailing whitespace is meaningful in markdown files
[*.md]
trim_trailing_whitespace = false
